          <!-- Copyright & Legal Links -->
          <div class="flex flex-col sm:flex-row items-center gap-4 text-sm">
            <p class="text-gray-700">
              &copy; {new Date().getFullYear()} Zepto Apps. All rights reserved.
            </p>
            <div class="flex gap-4">
              <a
                href="#"
                class="text-gray-500 hover:text-gray-800 transition-colors duration-200"
                >Privacy Policy</a
