---
import { Image } from "astro:assets";
import logo from "../assets/logo.avif";
---

<footer class="bg-gradient-to-br from-gray-100 to-gray-300 text-white">
  <div
    class="backdrop-blur-xs bg-gradient-to-br from-gray-100/50 to-gray-300/40"
  >
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Main Footer Content -->
      <div class="py-12 lg:py-16">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
          <!-- Company Info & Newsletter Section -->
          <div class="lg:col-span-5">
            <!-- Logo -->
            <div class="mb-6">
              <a href="/">
                <Image src={logo} alt="Zepto Apps Logo" class="w-32 h-auto" />
              </a>
            </div>

            <!-- Company Description -->
            <p class="text-gray-700 text-base leading-relaxed mb-8 max-w-md">
              Empowering businesses with innovative digital solutions. We create
              cutting-edge applications that drive growth and transform user
              experiences.
            </p>

            <!-- Newsletter Subscription -->
            <div class="mb-8">
              <h3 class="text-lg font-semibold mb-4 text-gray-700">
                Stay Updated
              </h3>
              <p class="text-gray-500 text-sm mb-4">
                Subscribe to our newsletter for the latest updates and insights.
              </p>
              <form class="flex flex-col sm:flex-row gap-3">
                <div class="flex-1">
                  <input
                    type="email"
                    placeholder="Enter your email address"
                    class="w-full px-4 py-3 bg-white border border-white rounded-lg text-gray-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
                    required
                  />
                </div>
                <button
                  type="submit"
                  class="px-6 py-3 bg-gradient-to-br from-primary/90 to-secondary_2 hover:from-primary hover:to-accent text-white font-medium rounded-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-secondary focus:ring-offset-2 focus:ring-offset-secondary_2"
                >
                  Subscribe
                </button>
              </form>
            </div>
          </div>

          <!-- Links Sections -->
          <div class="lg:col-span-7">
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
              <!-- Products -->
              <div>
                <h3 class="text-lg font-semibold mb-6 text-gray-700">
                  Products
                </h3>
                <ul class="space-y-4">
                  <li>
                    <a
                      target="_blank"
                      href="https://apps.shopify.com/product-personalizer"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Zepto Product Personalizer
                    </a>
                  </li>
                  <li>
                    <a
                      target="_blank"
                      href="https://apps.shopify.com/neon-sign-customizer"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Zepto Sign Customizer
                    </a>
                  </li>
                  <li>
                    <a
                      target="_blank"
                      href="https://apps.shopify.com/boostlycart-cart-drawer-upsell"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      BoostlyCart Cart Drawer Upsell
                    </a>
                  </li>
                  <li>
                    <a
                      target="_blank"
                      href="https://apps.shopify.com/infinseo"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      InfinSEO: SEO Image Optimizer
                    </a>
                  </li>
                  <li>
                    <a
                      target="_blank"
                      href="https://apps.shopify.com/popman-popups-social"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      PopMan: Popups & Social Proof
                    </a>
                  </li>
                </ul>
              </div>

              <!-- Company -->
              <div>
                <h3 class="text-lg font-semibold mb-6 text-gray-700">
                  Company
                </h3>
                <ul class="space-y-4">
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      About Us
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Our Team
                    </a>
                  </li>
                  <li>
                    <a
                      target="_blank"
                      href="https://career.zeptoapps.com/"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Careers
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      News & Blog
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Press Kit
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Partners
                    </a>
                  </li>
                </ul>
              </div>

              <!-- Get Help -->
              <div>
                <h3 class="text-lg font-semibold mb-6 text-gray-700">
                  Get Help
                </h3>
                <ul class="space-y-4">
                  <li>
                    <a
                      href="/contact"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Contact Us
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Support Center
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Documentation
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      FAQ
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Community Forum
                    </a>
                  </li>
                  <li>
                    <a
                      href="#"
                      class="text-gray-500 hover:text-gray-800 transition-colors duration-200 text-sm"
                    >
                      Live Chat
                    </a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Social Media & Bottom Section -->
      <div class="border-t border-gray-300 py-8">
        <div
          class="flex flex-col lg:flex-row justify-between items-center gap-6"
        >
          <!-- Social Media Links -->
          <div class="flex items-center gap-6">
            <span class="text-gray-700 text-sm">Follow us:</span>
            <div class="flex gap-4">
